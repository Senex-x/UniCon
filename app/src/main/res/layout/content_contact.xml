<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ContactActivity"
    tools:showIn="@layout/activity_contact">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/portrait"
                android:layout_width="280dp"
                android:layout_height="280dp"
                app:srcCompat="@drawable/ic_launcher_background"
                tools:layout_editor_absoluteX="41dp"
                tools:layout_editor_absoluteY="30dp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                android:text="Имя"
                android:textAlignment="viewStart"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgVk" />

            <LinearLayout
                android:layout_width="334dp"
                android:layout_height="match_parent"
                android:layout_marginRight="16dp"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/favorite"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="12dp"
                    android:background="@android:color/white" />

                <TextView
                    android:id="@+id/textFriend"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="Друг"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textWork"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="Коллега"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textFamily"
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="Родственник"
                    android:textSize="18sp" />
            </LinearLayout>

            <TableLayout
                android:layout_width="365dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:paddingTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="248dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <ImageButton
                        android:id="@+id/imageButton14"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="8dp"
                        android:background="@android:color/holo_green_light"
                        app:srcCompat="@android:drawable/ic_menu_call" />

                    <Button
                        android:id="@+id/phone"
                        android:layout_width="274dp"
                        android:layout_height="wrap_content"
                        android:background="@color/fabColor"
                        android:text="Позвонить"
                        android:textColor="@android:color/white" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <ImageButton
                        android:id="@+id/imageButton15"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="8dp"
                        android:background="@android:color/holo_orange_dark"
                        app:srcCompat="@android:drawable/sym_action_email" />

                    <Button
                        android:id="@+id/mail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/fabColor"
                        android:text="Отправить E-mail"
                        android:textColor="@android:color/white" />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/imgVk"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="8dp"
                        app:srcCompat="@drawable/vk" />

                    <Button
                        android:id="@+id/vk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/hatColor"
                        android:text="VK" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/imgTelegram"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:layout_margin="12dp"
                        app:srcCompat="@drawable/telegram" />

                    <Button
                        android:id="@+id/telegram"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/hatColor"
                        android:text="Telegram" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/imgWhatsapp"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:layout_margin="12dp"
                        app:srcCompat="@drawable/facebook" />

                    <Button
                        android:id="@+id/whatsapp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/hatColor"
                        android:text="Facebook" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/imgViber"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_margin="10dp"
                        app:srcCompat="@drawable/viber" />

                    <Button
                        android:id="@+id/viber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/hatColor"
                        android:text="viber" />

                </TableRow>

                <TableRow
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/imgTwitter"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="8dp"
                        app:srcCompat="@drawable/twitter" />

                    <Button
                        android:id="@+id/twitter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/hatColor"
                        android:text=" Twitter" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/imgDiscord"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_margin="6dp"
                        app:srcCompat="@drawable/discord" />

                    <Button
                        android:id="@+id/discord"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/hatColor"
                        android:text="Discord" />
                </TableRow>

            </TableLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/delete"
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:background="@color/fabColor"
                    android:text="Удалить контакт"
                    android:textColor="@android:color/white" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>